{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The big featured header }}
<header data-swiftype-index='false' class="main-header {{#if @blog.cover}}" style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}">
    <nav class="main-nav overlay clearfix">
        {{#if @blog.navigation}}
            <a class="menu-button icon-menu" href="#"><span class="word">Menu</span></a>
        {{/if}}
    </nav>
    <div class="vertical">
        <div class="main-header-content inner">
            <a class="avatar-link" id="avatar-link" title="link to homepage for {{@blog.title}}" href="{{@blog.url}}">
            <img src="{{@blog.logo}}" alt="{{@blog.title}} avatar" class="profile circular rounded hvr-buzz-out" />
            <h1 id="profile-title">{{@blog.title}}</h1>
            <h3 id="profile-resume"></h3>
            </a>
            <h2 class="page-description">{{@blog.description}}</h2>
        </div>
         {{> social}}
    </div>
    <a class="scroll-down icon-arrow-left" href="#content" data-offset="-45"><span class="hidden">Scroll Down</span></a>
</header>

{{! The main content area on the homepage }}
<main data-swiftype-index='false' id="content" class="content" role="main">

    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}

</main>
